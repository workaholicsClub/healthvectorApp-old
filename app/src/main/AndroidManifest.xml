<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ru.android.childdiary">

    <application
        android:name=".app.ChildDiaryApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity android:name=".presentation.main.MainActivity" />
        <activity android:name=".presentation.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".presentation.onboarding.IntroActivity" />
        <activity android:name=".presentation.settings.SettingsActivity" />
        <activity android:name=".presentation.profile.edit.ProfileEditActivity" />
        <activity android:name=".presentation.profile.review.ProfileReviewActivity" />

    </application>
</manifest>
