<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="@style/MaterialDrawerTheme.Light">
        <item name="colorPrimary">@color/colorPrimaryBoy</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkBoy</item>
        <item name="colorAccent">@color/colorAccentBoy</item>
    </style>

    <style name="AppTheme.Boy" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimaryBoy</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkBoy</item>
        <item name="colorAccent">@color/colorAccentBoy</item>
    </style>

    <style name="AppTheme.Girl" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimaryGirl</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkGirl</item>
        <item name="colorAccent">@color/colorAccentGirl</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryBoy</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkBoy</item>
        <item name="colorAccent">@color/colorAccentBoy</item>
    </style>

    <style name="FieldDescriptionStyle">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">12sp</item>
    </style>
