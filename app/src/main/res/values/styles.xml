<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="@style/MaterialDrawerTheme.Light">
        <item name="colorPrimary">#607D8B</item>
        <item name="colorPrimaryDark">#455A64</item>
        <item name="colorAccent">#90A4AE</item>
    </style>

    <style name="AppThemeDialog.Boy" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/primary_boy</item>
        <item name="colorPrimaryDark">@color/primary_dark_boy</item>
        <item name="colorAccent">@color/accent_boy</item>
    </style>

    <style name="AppThemeDialog.Girl" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/primary_girl</item>
        <item name="colorPrimaryDark">@color/primary_dark_girl</item>
        <item name="colorAccent">@color/accent_girl</item>
    </style>

    <style name="NameEditTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorHint">@color/white_transparent</item>
        <item name="android:background">@drawable/name_edit_text_background</item>
        <item name="android:paddingBottom">@dimen/name_edit_text_padding_bottom</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="fontPath">@string/font_path_bold</item>
    </style>

    <style name="NameTextViewStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/name_text_view_background</item>
        <item name="android:paddingBottom">@dimen/name_edit_text_padding_bottom</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="fontPath">@string/font_path_bold</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button_background_boy</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="fontPath">@string/font_path_bold</item>
    </style>

