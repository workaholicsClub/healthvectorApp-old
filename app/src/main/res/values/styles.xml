<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="@style/MaterialDrawerTheme.Light">
        <item name="colorPrimary">@color/colorPrimaryBoy</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkBoy</item>
        <item name="colorAccent">@color/colorAccentBoy</item>
    </style>

    <style name="AppTheme.Boy" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimaryBoy</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkBoy</item>
        <item name="colorAccent">@color/colorAccentBoy</item>
    </style>

    <style name="AppTheme.Girl" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimaryGirl</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkGirl</item>
        <item name="colorAccent">@color/colorAccentGirl</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryBoy</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkBoy</item>
        <item name="colorAccent">@color/colorAccentBoy</item>
    </style>

    <style name="FieldDescriptionStyle">
        <item name="android:textColor">@color/disabledTextColor</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="WhiteEditTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorHint">@color/transparentWhite</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

    <style name="DefaultTextAppearance" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/enabledTextColor</item>
    </style>
</resources>
