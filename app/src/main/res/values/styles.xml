<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="@style/MaterialDrawerTheme.Light">
        <item name="colorPrimary">@color/primary_boy</item>
        <item name="colorPrimaryDark">@color/primary_dark_boy</item>
        <item name="colorAccent">@color/accent_boy</item>
    </style>

    <style name="AppTheme.Boy">
        <item name="colorPrimary">@color/primary_boy</item>
        <item name="colorPrimaryDark">@color/primary_dark_boy</item>
        <item name="colorAccent">@color/accent_boy</item>
    </style>

    <style name="AppTheme.Girl">
        <item name="colorPrimary">@color/primary_girl</item>
        <item name="colorPrimaryDark">@color/primary_dark_girl</item>
        <item name="colorAccent">@color/accent_girl</item>
    </style>

    <style name="AppThemeDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/primary_boy</item>
        <item name="colorPrimaryDark">@color/primary_dark_boy</item>
        <item name="colorAccent">@color/accent_boy</item>
    </style>

    <style name="AppThemeDialog.Boy">
        <item name="colorPrimary">@color/primary_boy</item>
        <item name="colorPrimaryDark">@color/primary_dark_boy</item>
        <item name="colorAccent">@color/accent_boy</item>
    </style>

    <style name="AppThemeDialog.Girl">
        <item name="colorPrimary">@color/primary_girl</item>
        <item name="colorPrimaryDark">@color/primary_dark_girl</item>
        <item name="colorAccent">@color/accent_girl</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="NameEditTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorHint">@color/transparentWhite</item>
        <item name="android:background">@drawable/name_edit_text_background</item>
        <item name="android:paddingBottom">@dimen/name_edit_text_padding_bottom</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="NameTextViewStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/name_text_view_background</item>
        <item name="android:paddingBottom">@dimen/name_edit_text_padding_bottom</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button_background_boy</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="ToolbarTitleTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ToolbarSubtitleTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="PrimaryTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/text_size_base</item>
    </style>

    <style name="SecondaryTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>
</resources>
