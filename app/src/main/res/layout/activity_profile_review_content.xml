<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_top_panel_height"
        android:elevation="@dimen/toolbar_elevation"
        android:orientation="horizontal"
        tools:ignore="UnusedAttribute">

        <com.mikepenz.materialdrawer.view.BezelImageView
            android:id="@+id/imageViewPhoto"
            android:layout_width="@dimen/profile_image_size"
            android:layout_height="@dimen/profile_image_size"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/profile_margin_vertical"
            android:layout_marginLeft="@dimen/profile_margin_horizontal"
            android:layout_marginRight="@dimen/profile_margin_horizontal"
            android:layout_marginTop="@dimen/profile_margin_vertical"
            android:elevation="8dp"
            android:src="@color/white"
            app:biv_selectorOnPress="@android:color/transparent" />

        <TextView
            android:id="@+id/textViewChildName"
            style="@style/NameTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/profile_margin_horizontal"
            android:layout_marginRight="@dimen/profile_margin_horizontal"
            android:layout_toEndOf="@+id/imageViewPhoto"
            android:layout_toRightOf="@+id/imageViewPhoto" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/profile_margin_horizontal"
        android:layout_marginRight="@dimen/profile_margin_horizontal"
        android:layout_marginTop="@dimen/profile_margin_vertical"
        android:text="@string/sex"
        android:textAppearance="@style/PlaceholderTextAppearance" />

    <TextView
        android:id="@+id/textViewSex"
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_field_height"
        android:layout_marginLeft="@dimen/profile_margin_horizontal"
        android:layout_marginRight="@dimen/profile_margin_horizontal"
        android:gravity="center_vertical"
        android:textAppearance="@style/PrimaryTextAppearance" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/profile_margin_horizontal"
        android:layout_marginRight="@dimen/profile_margin_horizontal"
        android:layout_marginTop="@dimen/profile_margin_vertical"
        android:text="@string/birth_date_and_time"
        android:textAppearance="@style/PlaceholderTextAppearance" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/profile_margin_horizontal"
        android:layout_marginRight="@dimen/profile_margin_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="0dp"
            android:layout_height="@dimen/profile_field_height"
            android:layout_marginEnd="@dimen/profile_margin_horizontal"
            android:layout_marginRight="@dimen/profile_margin_horizontal"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textAppearance="@style/PrimaryTextAppearance" />

        <TextView
            android:id="@+id/textViewTime"
            android:layout_width="0dp"
            android:layout_height="@dimen/profile_field_height"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textAppearance="@style/PrimaryTextAppearance" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/profile_margin_horizontal"
        android:layout_marginRight="@dimen/profile_margin_horizontal"
        android:layout_marginTop="@dimen/profile_margin_vertical"
        android:text="@string/birth_height_and_weight"
        android:textAppearance="@style/PlaceholderTextAppearance" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/profile_margin_horizontal"
        android:layout_marginRight="@dimen/profile_margin_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewBirthHeight"
            android:layout_width="0dp"
            android:layout_height="@dimen/profile_field_height"
            android:layout_marginEnd="@dimen/profile_margin_horizontal"
            android:layout_marginRight="@dimen/profile_margin_horizontal"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textAppearance="@style/PrimaryTextAppearance" />

        <TextView
            android:id="@+id/textViewBirthWeight"
            android:layout_width="0dp"
            android:layout_height="@dimen/profile_field_height"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textAppearance="@style/PrimaryTextAppearance" />
    </LinearLayout>
</LinearLayout>
