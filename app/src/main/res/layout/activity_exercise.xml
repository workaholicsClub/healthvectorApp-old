<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/field_margin_base"
        android:paddingTop="@dimen/field_margin_base">

        <ru.android.childdiary.presentation.core.fields.widgets.FieldExerciseNameView
            android:id="@+id/exerciseNameView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ru.android.childdiary.presentation.core.fields.widgets.FieldExerciseDescriptionView
            android:id="@+id/exerciseDescriptionView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonAdd"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_marginBottom="@dimen/button_margin_vertical"
        android:layout_marginLeft="@dimen/profile_margin_horizontal"
        android:layout_marginRight="@dimen/profile_margin_horizontal"
        android:layout_marginTop="@dimen/button_margin_vertical"
        android:text="@string/export_to_calendar"
        android:textAllCaps="false" />
</LinearLayout>
