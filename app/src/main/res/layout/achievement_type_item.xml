<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contentView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_clickable"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/base_margin_half"
    android:paddingTop="@dimen/base_margin_half">

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base_margin"
        android:layout_marginStart="@dimen/base_margin"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:singleLine="true"
        android:textAppearance="@style/ItemTitleTextAppearance.Bold"
        tools:ignore="Deprecated" />

    <ImageView
        android:id="@+id/imageViewArrow"
        android:layout_width="@dimen/base_icon_size"
        android:layout_height="@dimen/base_icon_size"
        android:layout_marginEnd="@dimen/base_margin"
        android:layout_marginRight="@dimen/base_margin"
        android:scaleType="center"
        android:src="@drawable/arrow_down_black" />
</LinearLayout>
