<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="24dp"
        android:paddingLeft="@dimen/base_margin"
        android:paddingRight="@dimen/base_margin"
        android:paddingTop="24dp">

        <TextView
            android:id="@+id/textViewOperationInProcessTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/restore_data_in_process"
            android:textAppearance="@style/CloudOperationTitleTextAppearance" />

        <TextView
            android:id="@+id/textViewOperationInProcess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/restore_data_placeholder"
            android:textAppearance="@style/CloudOperationPlaceholderTextAppearance" />

        <android.support.v4.widget.ContentLoadingProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>
