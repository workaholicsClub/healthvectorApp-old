<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/bottomView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/field_height"
        android:layout_gravity="center_vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/actionDelete"
            android:layout_width="@dimen/field_delete_height"
            android:layout_height="@dimen/field_delete_height"
            android:layout_marginEnd="@dimen/base_margin"
            android:layout_marginRight="@dimen/base_margin"
            android:background="@color/accent_boy"
            android:scaleType="center"
            android:src="@drawable/ic_delete" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/contentView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/field_height"
        android:background="@drawable/background_clickable"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/base_margin"
            android:layout_marginLeft="@dimen/base_margin"
            android:layout_marginRight="@dimen/base_margin"
            android:layout_marginStart="@dimen/base_margin"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:textAppearance="@style/ItemTitleTextAppearance"
            tools:ignore="Deprecated" />
    </LinearLayout>
</com.daimajia.swipe.SwipeLayout>
