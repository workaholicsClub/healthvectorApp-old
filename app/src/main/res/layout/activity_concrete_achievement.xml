<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/field_margin_base"
    android:paddingTop="@dimen/field_margin_base">

    <ru.android.childdiary.presentation.core.fields.widgets.FieldEditTextWithImageAutocompleteView
        android:id="@+id/achievementNameView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:fieldHideIfEmpty="true"
        app:fieldHint="@string/achievement"
        app:fieldIcon="@drawable/ic_name"
        app:fieldMaxLength="@integer/max_length_name" />

    <ru.android.childdiary.presentation.core.fields.widgets.FieldDateView
        android:id="@+id/dateView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ru.android.childdiary.presentation.core.fields.widgets.FieldNoteWithPhotoView
        android:id="@+id/noteWithPhotoView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:fieldHint="@string/comment" />
</LinearLayout>
