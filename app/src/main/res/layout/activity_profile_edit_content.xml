<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_top_panel_height"
        android:background="?colorPrimary"
        android:elevation="@dimen/toolbar_elevation"
        android:orientation="horizontal"
        tools:ignore="UnusedAttribute">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageViewPhoto"
            android:layout_width="@dimen/profile_image_size"
            android:layout_height="@dimen/profile_image_size"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/profile_margin_vertical"
            android:layout_marginLeft="@dimen/profile_margin_horizontal"
            android:layout_marginRight="@dimen/profile_margin_horizontal"
            android:layout_marginTop="@dimen/profile_margin_vertical"
            android:src="@color/white" />

        <TextView
            android:id="@+id/textViewPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageViewPhoto"
            android:layout_alignEnd="@+id/imageViewPhoto"
            android:layout_alignLeft="@+id/imageViewPhoto"
            android:layout_alignRight="@+id/imageViewPhoto"
            android:layout_alignStart="@+id/imageViewPhoto"
            android:layout_alignTop="@+id/imageViewPhoto"
            android:gravity="center"
            android:text="@string/add_image_button_title"
            android:textAppearance="@style/SecondaryTextAppearance" />

        <ru.android.childdiary.presentation.profile.edit.widgets.CustomEditText
            android:id="@+id/editTextChildName"
            style="@style/NameEditTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/profile_margin_horizontal"
            android:layout_marginRight="@dimen/profile_margin_horizontal"
            android:layout_toEndOf="@+id/imageViewPhoto"
            android:layout_toRightOf="@+id/imageViewPhoto"
            android:hint="@string/child_name"
            android:imeOptions="actionNext"
            android:inputType="textCapWords"
            android:textCursorDrawable="@drawable/name_edit_text_cursor" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/profile_margin_horizontal"
        android:layout_marginRight="@dimen/profile_margin_horizontal"
        android:layout_marginTop="@dimen/profile_margin_vertical"
        android:text="@string/sex"
        android:textAppearance="@style/SecondaryTextAppearance" />

    <TextView
        android:id="@+id/textViewSex"
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_field_height"
        android:layout_marginLeft="@dimen/profile_margin_horizontal"
        android:layout_marginRight="@dimen/profile_margin_horizontal"
        android:background="@drawable/spinner_background"
        android:gravity="center_vertical"
        android:text="@string/select_sex"
        android:textAppearance="@style/PrimaryTextAppearance"
        android:textColor="@color/secondary_text" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/profile_margin_horizontal"
        android:layout_marginRight="@dimen/profile_margin_horizontal"
        android:layout_marginTop="@dimen/profile_margin_vertical"
        android:text="@string/birth_date_and_time"
        android:textAppearance="@style/SecondaryTextAppearance" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/profile_margin_horizontal"
        android:layout_marginRight="@dimen/profile_margin_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="0dp"
            android:layout_height="@dimen/profile_field_height"
            android:layout_marginEnd="@dimen/profile_margin_horizontal"
            android:layout_marginRight="@dimen/profile_margin_horizontal"
            android:layout_weight="1"
            android:background="@drawable/spinner_background"
            android:gravity="center_vertical"
            android:text="@string/date"
            android:textAppearance="@style/PrimaryTextAppearance"
            android:textColor="@color/secondary_text" />

        <TextView
            android:id="@+id/textViewTime"
            android:layout_width="0dp"
            android:layout_height="@dimen/profile_field_height"
            android:layout_weight="1"
            android:background="@drawable/spinner_background"
            android:gravity="center_vertical"
            android:text="@string/time"
            android:textAppearance="@style/PrimaryTextAppearance"
            android:textColor="@color/secondary_text" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/profile_margin_horizontal"
        android:layout_marginRight="@dimen/profile_margin_horizontal"
        android:layout_marginTop="@dimen/profile_margin_vertical"
        android:text="@string/birth_height_and_weight"
        android:textAppearance="@style/SecondaryTextAppearance" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/profile_margin_horizontal"
        android:layout_marginRight="@dimen/profile_margin_horizontal"
        android:orientation="horizontal">

        <ru.android.childdiary.presentation.profile.edit.widgets.CustomEditText
            android:id="@+id/editTextBirthHeight"
            android:layout_width="0dp"
            android:layout_height="@dimen/profile_field_height"
            android:layout_marginEnd="@dimen/profile_margin_horizontal"
            android:layout_marginRight="@dimen/profile_margin_horizontal"
            android:layout_weight="1"
            android:background="@drawable/spinner_background"
            android:hint="@string/enter_height"
            android:imeOptions="actionNext"
            android:inputType="numberDecimal"
            android:textAppearance="@style/PrimaryTextAppearance"
            android:textColorHint="@color/secondary_text"
            android:textCursorDrawable="@drawable/edit_text_cursor" />

        <ru.android.childdiary.presentation.profile.edit.widgets.CustomEditText
            android:id="@+id/editTextBirthWeight"
            android:layout_width="0dp"
            android:layout_height="@dimen/profile_field_height"
            android:layout_weight="1"
            android:background="@drawable/spinner_background"
            android:hint="@string/enter_weight"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:textAppearance="@style/PrimaryTextAppearance"
            android:textColorHint="@color/secondary_text"
            android:textCursorDrawable="@drawable/edit_text_cursor" />

        <View
            android:id="@+id/dummy"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <requestFocus />
        </View>
    </LinearLayout>
</LinearLayout>
