<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background">

    <FrameLayout
        android:id="@+id/toolbarWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/toolbar" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbarWrapper"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/field_margin_base"
        android:paddingTop="@dimen/field_margin_base">

        <include layout="@layout/request_focus_view_dummy" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="@dimen/field_height"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/field_icon_size"
                android:layout_height="@dimen/field_icon_size"
                android:scaleType="center"
                android:src="@drawable/ic_doctor" />

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/base_margin"
                android:layout_marginRight="@dimen/base_margin"
                android:layout_weight="1"
                android:background="@drawable/edit_text_background"
                android:hint="@string/add_doctor_hint"
                android:imeOptions="actionDone"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLength="@integer/max_length_other_event_name"
                android:paddingBottom="@dimen/name_edit_text_padding_bottom"
                android:textAppearance="@style/PrimaryTextAppearance"
                android:textColor="@drawable/field_editable_text_color"
                android:textColorHint="@color/placeholder_text"
                android:textCursorDrawable="@drawable/edit_text_cursor" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/buttonAdd"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/button_margin_vertical"
        android:layout_marginLeft="@dimen/profile_margin_horizontal"
        android:layout_marginRight="@dimen/profile_margin_horizontal"
        android:layout_marginTop="@dimen/button_margin_vertical"
        android:text="@string/add"
        android:textAllCaps="false" />
</RelativeLayout>
