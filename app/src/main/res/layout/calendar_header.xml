<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="@dimen/calendar_title_height"
        android:layout_marginLeft="@dimen/calendar_margin_horizontal"
        android:layout_marginStart="@dimen/calendar_margin_horizontal"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:singleLine="true"
        android:textAppearance="@style/TitleTextAppearance"
        tools:ignore="Deprecated" />

    <ImageView
        android:id="@+id/left"
        android:layout_width="@dimen/calendar_title_button_width"
        android:layout_height="@dimen/calendar_title_height"
        android:background="@drawable/background_clickable"
        android:scaleType="center"
        android:src="@drawable/arrow_left" />

    <ImageView
        android:id="@+id/today"
        android:layout_width="@dimen/calendar_title_button_width"
        android:layout_height="@dimen/calendar_title_height"
        android:background="@drawable/background_clickable"
        android:scaleType="center"
        android:src="@drawable/ic_today" />

    <ImageView
        android:id="@+id/right"
        android:layout_width="@dimen/calendar_title_button_width"
        android:layout_height="@dimen/calendar_title_height"
        android:background="@drawable/background_clickable"
        android:scaleType="center"
        android:src="@drawable/arrow_right" />
</LinearLayout>
