<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/calendarTitle"
        android:layout_width="0dp"
        android:layout_height="@dimen/calendar_title_height"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingLeft="@dimen/calendar_margin_horizontal"
        android:paddingRight="@dimen/calendar_margin_horizontal"
        android:textAppearance="@style/TitleTextAppearance" />

    <ImageView
        android:id="@+id/left"
        android:layout_width="@dimen/calendar_title_height"
        android:layout_height="@dimen/calendar_title_height"
        android:background="@drawable/background_clickable"
        android:scaleType="center"
        android:src="@drawable/arrow_left" />

    <ImageView
        android:id="@+id/right"
        android:layout_width="@dimen/calendar_title_height"
        android:layout_height="@dimen/calendar_title_height"
        android:background="@drawable/background_clickable"
        android:scaleType="center"
        android:src="@drawable/arrow_right" />
</LinearLayout>
