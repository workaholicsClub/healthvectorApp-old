<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ru.android.childdiary.presentation.events.widgets.EventDetailTitleView
        android:id="@+id/startTitleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ru.android.childdiary.presentation.events.widgets.EventDetailDateView
        android:id="@+id/startDateView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ru.android.childdiary.presentation.events.widgets.EventDetailTimeView
        android:id="@+id/startTimeView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ru.android.childdiary.presentation.events.widgets.EventDetailTitleView
        android:id="@+id/finishTitleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ru.android.childdiary.presentation.events.widgets.EventDetailDateView
        android:id="@+id/finishDateView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ru.android.childdiary.presentation.events.widgets.EventDetailTimeView
        android:id="@+id/finishTimeView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ru.android.childdiary.presentation.events.widgets.EventDetailDurationView
        android:id="@+id/durationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/buttonTimer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/timer_height"
        android:layout_marginBottom="@dimen/timer_margin_vertical"
        android:layout_marginLeft="@dimen/timer_margin_horizontal"
        android:layout_marginRight="@dimen/timer_margin_horizontal"
        android:layout_marginTop="@dimen/timer_margin_vertical"
        android:background="@drawable/background_timer_on_boy"
        android:drawableLeft="@drawable/timer_on_boy"
        android:drawableStart="@drawable/timer_on_boy"
        android:gravity="center_vertical|end"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/duration_format"
        android:textColor="@color/timer_on_boy"
        android:textSize="@dimen/timer_text_size" />

    <ru.android.childdiary.presentation.events.widgets.EventDetailNotifyTimeView
        android:id="@+id/notifyTimeView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
