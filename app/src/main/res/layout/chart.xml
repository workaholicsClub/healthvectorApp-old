<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chartWrapper"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_margin="@dimen/base_margin"
    android:layout_weight="1">

    <com.github.mikephil.charting.charts.CombinedChart
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/yTitleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/axis_title_padding"
        android:layout_marginStart="@dimen/axis_title_padding"
        android:paddingTop="@dimen/axis_title_padding"
        android:textColor="@color/placeholder_text"
        android:textSize="@dimen/text_size_small" />

    <TextView
        android:id="@+id/xTitleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/axis_title_padding"
        android:layout_marginRight="@dimen/axis_title_padding"
        android:paddingBottom="@dimen/axis_title_padding"
        android:textColor="@color/placeholder_text"
        android:textSize="@dimen/text_size_small" />
</RelativeLayout>
