<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="400dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/request_focus_view_dummy" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/profile_margin_horizontal"
            android:layout_marginRight="@dimen/profile_margin_horizontal"
            android:layout_marginTop="@dimen/profile_margin_vertical"
            android:text="@string/filter_by_date"
            android:textAppearance="@style/FilterPlaceholderTextAppearance" />

        <include
            android:id="@+id/filter_by_date_from"
            layout="@layout/dialog_filter_by_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp" />

        <include
            android:id="@+id/filter_by_date_to"
            layout="@layout/dialog_filter_by_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/filter_by_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/profile_margin_horizontal"
            android:layout_marginRight="@dimen/profile_margin_horizontal"
            android:layout_marginTop="@dimen/profile_margin_vertical"
            android:text="@string/filter_by_doctor"
            android:textAppearance="@style/FilterPlaceholderTextAppearance" />

        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/profile_margin_vertical"
            android:layout_marginLeft="@dimen/profile_margin_horizontal"
            android:layout_marginRight="@dimen/profile_margin_horizontal"
            android:layout_marginTop="@dimen/profile_margin_vertical"
            android:background="@drawable/edit_text_background"
            android:drawableEnd="@drawable/arrow_down_black"
            android:drawableRight="@drawable/arrow_down_black"
            android:hint="@string/doctor"
            android:paddingBottom="@dimen/name_edit_text_padding_bottom"
            android:textAppearance="@style/PrimaryTextAppearance"
            android:textColorHint="@color/placeholder_text"
            android:textCursorDrawable="@drawable/edit_text_cursor" />
    </LinearLayout>
</ScrollView>
