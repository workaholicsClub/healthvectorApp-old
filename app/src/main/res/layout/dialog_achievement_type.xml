<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="false"
    android:minWidth="@dimen/test_parameters_dialog_width">

    <LinearLayout
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_margin_half"
        android:orientation="vertical">

        <ru.android.healthvector.presentation.core.fields.widgets.FieldAchievementTypeRadioView
            android:id="@+id/achievementTypeRadioView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:fieldShowIcon="false" />
    </LinearLayout>
</ScrollView>
