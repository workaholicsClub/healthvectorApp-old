<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/field_height"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/soundIcon"
        android:layout_width="@dimen/field_icon_size"
        android:layout_height="@dimen/field_icon_size"
        android:scaleType="center"
        android:src="@drawable/ic_sound" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:text="@string/notification_sound"
        android:textAppearance="@style/SecondaryTextAppearance"
        tools:ignore="Deprecated" />

    <LinearLayout
        android:id="@+id/textViewWrapper"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/field_margin_base"
        android:layout_marginRight="@dimen/field_margin_base"
        android:layout_weight="1"
        android:background="@drawable/background_clickable"
        android:gravity="center_vertical|end"
        android:minWidth="@dimen/field_text_view_min_width"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="@dimen/field_height"
            android:layout_marginLeft="@dimen/base_margin"
            android:layout_marginStart="@dimen/base_margin"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical|end"
            android:maxLines="1"
            android:singleLine="true"
            android:textAppearance="@style/PrimaryTextAppearance"
            tools:ignore="Deprecated,NestedWeights" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/base_icon_size"
            android:layout_height="@dimen/base_icon_size"
            android:layout_marginEnd="@dimen/field_margin_base"
            android:layout_marginRight="@dimen/field_margin_base"
            android:scaleType="center"
            android:src="@drawable/arrow_down_black" />
    </LinearLayout>
</LinearLayout>
