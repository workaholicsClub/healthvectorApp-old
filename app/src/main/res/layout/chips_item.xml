<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/chips_item_padding_bottom"
    android:paddingEnd="@dimen/chips_item_padding_right"
    android:paddingLeft="@dimen/chips_item_padding_left"
    android:paddingRight="@dimen/chips_item_padding_right"
    android:paddingStart="@dimen/chips_item_padding_left"
    android:paddingTop="@dimen/chips_item_padding_top">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/token_item_height"
        android:background="@drawable/token_item_background"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingEnd="36dp"
            android:paddingLeft="@dimen/token_item_padding_horizontal"
            android:paddingRight="36dp"
            android:paddingStart="@dimen/token_item_padding_horizontal"
            android:singleLine="true"
            android:textAppearance="@style/TokenItemTextAppearance" />

        <ImageView
            android:id="@+id/actionChipsDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:scaleType="center"
            android:src="@drawable/ic_chips_delete" />
    </FrameLayout>
</FrameLayout>
