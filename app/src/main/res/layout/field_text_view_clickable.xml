<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/textViewWrapper"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/field_margin_base"
    android:layout_marginLeft="@dimen/field_margin_base"
    android:layout_marginRight="@dimen/field_margin_base"
    android:layout_marginStart="@dimen/field_margin_base"
    android:background="@drawable/background_clickable"
    android:gravity="center_vertical|end"
    android:minWidth="@dimen/field_text_view_min_width"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/field_height"
        android:layout_marginLeft="@dimen/base_margin_horizontal"
        android:layout_marginStart="@dimen/base_margin_horizontal"
        android:gravity="center_vertical|end"
        android:textAppearance="@style/PrimaryTextAppearance" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/arrow_icon_size"
        android:layout_height="@dimen/arrow_icon_size"
        android:layout_marginEnd="@dimen/field_margin_base"
        android:layout_marginRight="@dimen/field_margin_base"
        android:scaleType="center"
        android:src="@drawable/arrow_down_black" />
</LinearLayout>
