<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/field_margin_base"
    android:paddingTop="@dimen/field_margin_base">

    <ru.android.childdiary.presentation.core.fields.widgets.FieldWeightView
        android:id="@+id/weightView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:fieldHint="@string/weight_hint"
        app:fieldIcon="@drawable/ic_food_measure"
        app:fieldText="@string/weight" />

    <ru.android.childdiary.presentation.core.fields.widgets.FieldHeightView
        android:id="@+id/heightView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:fieldHint="@string/height_hint"
        app:fieldIcon="@drawable/ic_height"
        app:fieldText="@string/height" />

    <ru.android.childdiary.presentation.core.fields.widgets.FieldDateView
        android:id="@+id/dateView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
