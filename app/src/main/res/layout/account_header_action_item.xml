<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageViewPhoto"
        android:layout_width="@dimen/account_header_image_size"
        android:layout_height="@dimen/account_header_image_size"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/account_header_action_item_margin"
        android:layout_marginLeft="@dimen/account_header_action_item_margin"
        android:layout_marginStart="@dimen/account_header_action_item_margin"
        android:layout_marginTop="@dimen/account_header_action_item_margin"
        android:src="@color/white" />

    <TextView
        android:id="@android:id/text1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/imageViewPhoto"
        android:layout_toRightOf="@+id/imageViewPhoto"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingLeft="@dimen/list_item_padding"
        android:paddingRight="@dimen/list_item_padding"
        android:textAlignment="inherit"
        android:textAppearance="@style/PrimaryTextAppearance" />
</RelativeLayout>
